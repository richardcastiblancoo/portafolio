<style>
    h2{
        text-align: center;
        color: wheat;
        font-size: 2.3rem;
        margin-left: -500px;
    }

    .project-card {
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.3s ease;
        width: 350px;
        margin-left: 600px;
        margin-top: 100px;
        margin-bottom: 100px;
    }

    .project-card:hover {
        transform: translateY(-5px);
    }

    .project-image img {
        width: 140px;
        height: 140px;
        object-fit: cover;
    }

    .project-content {
        padding: 1.5rem;
    }

    h3 {
        color: #333;
        margin-bottom: 0.5rem;
        font-size: 1.5rem;
    }

    .technologies {
        margin: 1rem 0;
    }

    .tech-icons {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        margin-top: 0.5rem;
    }

    .tech-item {
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f5f5f5;
        padding: 0.5rem 1rem;
        border-radius: 20px;
    }

    .project-links {
        display: flex;
        gap: 1rem;
        margin-top: 1.5rem;
    }

    .project-btn,
    .github-btn {
        padding: 0.5rem 1rem;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 500;
        transition: background 0.3s ease;
    }

    .project-btn {
        background: #007bff;
        color: white;
    }

    .github-btn {
        background: #333;
        color: white;
    }

    .project-btn:hover,
    .github-btn:hover {
        opacity: 0.9;
    }

    @media screen and (max-width: 768px)  {
        h2{
            margin-left: 0px;
        }

      .project-card{
        margin-left: 15px;
      }
    }

</style>
